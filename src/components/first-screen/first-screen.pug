mixin firstScreen(title, slogan, trigger, logo, alt, cls)
	section.first-screen
		div.wrapper
			div.first-screen__wrapper
				div.first-view-port
					div.first-screen__wrapper-logo-foto
						div(class=cls).first-screen__logo
							img(src=logo alt=alt)
							div.first-screen__slogan
								span=slogan[0]
								span=slogan[1]
								span=slogan[2]
							div.first-screen__time 24/7
						div.first-screen__foto
							img(src="images/components/first-screen/shab3.jpg" alt="Avtoperevozchik логистическая компания")
					div.first-screen__top
						h1.first-screen__title=title
				div.first-screen__middle
					form(class="trigger-form", action="/")
						div.trigger-form__trigger=trigger
						div.trigger-form__wrapper
							input(type="text", class="trigger-form__input input-field", name="name", placeholder="Ваше имя")
							input(type="tel", class="trigger-form__input input-field", name="tel", placeholder="+7 (___) ___-__-__", title="Формат: +7 (096) 999 99 99", required)
							input(type="submit", class="trigger-form__button button", value="Заказать")