	form(class="popup__form", action="/")
		div.popup__form__trigger
		div.popup__form__wrapper
			input(type="text", class="popup__form__input input-field", name="name", placeholder="Ваше имя")
			input(type="tel", class="popup__form__input input-field", name="tel", placeholder="+7 (___) ___-__-__", title="Формат: +7 (096) 999 99 99", required)
			input(type="submit", class="popup__form__button button", value="Заказать")