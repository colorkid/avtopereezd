mixin aboutCompany(abouttxt, nameOfCompany, callToAction)
	section.about-company(id="about-company")
		div.wrapper.animated
			div.about-company__wrapper
				h2.about-company__title О компании
				div.about-company__left
						div.workers
							h3.workers__title Сотрудники
							div.workers__item
								div.workers__pic
									img(src="images/components/about-company/letov.jpg" alt="Летов Евгений")
								div.workers__position Менеджер
								div.workers__name Евгений Летов
							div.workers__item
								div.workers__pic
									img(src="images/components/about-company/ejov.jpg" alt="Ежов Александр")
								div.workers__position Менеджер
								div.workers__name Александр Ежов
				div.about-company__right
					div.about-company__txt=abouttxt
					div.facts
						h3.facts__title Факты о Логистической компании Avtoperevozchik
						div.facts__item.facts__item--experence
							div.facts__txt Сотрудники компании имеют опыт грузо-перевозочных услуг с 2010 года.
						div.facts__item.facts__item--collective
							div.facts__txt Штат компании более 25 сотрудников.
						div.facts__item.facts__item--cars
							div.facts__txt Наш автопарк состоит из 10 грузовых автомобилей.
						div.facts__item.facts__item--storage
							div.facts__txt Наша компания обеспечена теплыми и холодными складскими помещениями.
					div.about-company__footer
						form(class="about-company-form", action="/form.php", method="post")
							div.about-company-form__trigger=callToAction
							input(type="text", class="about-company-form__input input-field", name="name", placeholder="Ваше имя")
							input(type="tel", class="about-company-form__input input-field", name="tel", placeholder="+7 (___) ___-__-__", title="Формат: +7 (096) 999 99 99", required)
							input(type="submit", class="about-company-form__button button", value="Заказать")





					

							





