section.calculator(id="calculator")
	div.wrapper.animated
		div.calculator__wrapper
			h2.calculator__title Калькулятор
			form(class="calc", id="appMebel", v-on:change="calculateTheCost")
				div.calc__row
					div.calc__cell.calc__cell--name Наименование
					div.calc__cell.calc__cell--name Количество часов
					div.calc__cell.calc__cell--name Цена за час
					div.calc__cell.calc__cell--name Стоимость
				div.calc__row
					div.calc__cell.calc__cell--bold Газель (1,5 т)
					div.calc__cell
						input(type="number", class="calc__field calc__field--number", v-model="gaz")
					div.calc__cell 2500 ₸
					div.calc__cell {{ gazsum }} ₸
				div.calc__row
					div.calc__cell.calc__cell--bold Грузчики, 2 человека:
					div.calc__cell
						input(type="number", class="calc__field calc__field--number", v-model="mover")
					div.calc__cell 3000 ₸
					div.calc__cell {{ moversum }} ₸
				div.calc__row
					div.calc__cell.calc__cell--bold Мебельщик:
					div.calc__cell
						input(type="number", class="calc__field calc__field--number", v-model="furnitureman")
					div.calc__cell 2000 ₸
					div.calc__cell {{ furnituremansum }} ₸
				div.calc__row
					div.calc__cell.calc__cell--bold Упаковщик:
					div.calc__cell
						input(type="number", class="calc__field calc__field--number", v-model="packman")
					div.calc__cell 1500 ₸
					div.calc__cell {{ packmansum }} ₸
				div.calc__row
					div.calc__cell.calc__cell--bold Супервайзер:
					div.calc__cell
						input(type="number", class="calc__field calc__field--number", v-model="supervaizer")
					div.calc__cell 2000 ₸
					div.calc__cell {{ supervaizersum }} ₸
				div.calc__row
					div.calc__cell.calc__cell--name Общая стоимость:
					div.calc__cell
						div.calc__all-total-cost
							span.calc__money-value {{ allsum }}
							span.calc__money-currency ₸